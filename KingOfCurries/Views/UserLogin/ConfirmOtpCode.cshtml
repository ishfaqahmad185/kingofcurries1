
@{
    ViewData["Title"] = "Confirm Otp Code";
    
}


@using Microsoft.AspNetCore.Http;
@{
    TempData.Keep("OTPCode");
    TempData.Keep("Email");
    TempData.Keep("UserName");
    TempData.Keep("UserId");


}
<style>
    .btn-outline-blue {
        color: #1f4a79;
        border-color: #1f4a79;
    }

        .btn-outline-blue:hover {
            color: #fff;
            background-color: #1f4a79;
            border-color: #343a40;
        }
</style>

<div class="breadcumb-wrapper" data-bg-src="../../images/Banner/5.jpg">
    <div class="container z-index-common">
        <div class="breadcumb-content">
            <h1 class="breadcumb-title">Confirm <span class="font-style text-theme2">OTP</span></h1>
            <ul class="breadcumb-menu">
                <li><a href="/" style="color:#D8962B !important;" >Home</a></li>
                <li>Confirm OTP</li>
            </ul>
        </div>
    </div>
</div>
<section class="space">
    <div class="container">

@if (!string.IsNullOrEmpty(ViewBag.ErrorMsg))
{
    <div class="row m-5" >
                    <div class="col-sm-12">
                        <div class="alert alert-danger alert-dismissible d-flex align-items-center" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                            <div>
                                <strong>Error! </strong>  
            @ViewBag.ErrorMsg

                                <button type="button" class="btn-close text-success" data-bs-dismiss="alert" aria-label="Close"><strong>x</strong></button>
                            </div>
                        </div>
                    </div>
                    </div>
   
}
@if (ViewBag.Error == 2)
{
      <div class="row m-5" >
                    <div class="col-sm-12">
                        <div class="alert alert-danger alert-dismissible d-flex align-items-center" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                            <div>
                                <strong>Error! </strong>  
            Invalid Otp Code Kindly Provide A Valid OTP Code which is Already Sended to Your Email Address

                                <button type="button" class="btn-close text-success" data-bs-dismiss="alert" aria-label="Close"><strong>x</strong></button>
                            </div>
                        </div>
                    </div>
                    </div>
   
}

@if (ViewBag.EmailShow == 2)
{
    <div class="row m-5" >
                    <div class="col-sm-12">
                        <div class="alert alert-success alert-dismissible d-flex align-items-center" role="alert">
                           <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
                            <div>
          
                                <strong>Success! </strong>  
            the code has been successfully send to your email address (@ViewBag.EmailAddress) kindly check your email address to reset password

                                <button type="button" class="btn-close text-danger" data-bs-dismiss="alert" aria-label="Close"><strong>x</strong></button>
                            </div>
                        </div>
                    </div>
                    </div>

    
}
<form  asp-action="ConfirmOtpCode" method="post">
    @if (ViewBag.Error == 3)
    {
        <div class="row m-5" >
                    <div class="col-sm-12">
                        <div class="alert alert-danger alert-dismissible d-flex align-items-center" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                            <div>
          
                                <strong>Error! </strong>  
            Error occured while sending an email, please contact the administrator. Below is the error message
                <br />
                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close text-danger" data-bs-dismiss="alert" aria-label="Close"><strong>x</strong></button>
                            </div>
                        </div>
                    </div>
                    </div>


        <div class="form-group col-sm-12 center  text-center">
            <div class=" alert alert-danger text-white">
              
            </div>
        </div>
    }
    else
    {
        <div class="row m-0 mt-5 mb-5 ]">
            <div class="col-3 d-lg-block d-none"></div>
            <div class="col-lg-6 col-md-6 col-sm-12 text-center">
                <div class=" row col-md-12 pt-4">
                    <p class="text-pink font-20 text-center">
                        We have emailed you a reset code. Please enter it below.

                    </p>
                </div>
                <div class="row text-center">
                    <div class=" font-36 text-center pt-4 pb-4 bg-white container avantgardece" style="color: #1f4a79">
                        Please enter the reset code
                    </div>

                    <div class="form-group col-sm-1 center"></div>
                    <div class="form-group col-sm-10 center ">
                        @*<label asp-for="ContactEmail">Email</label>*@
                        <div class="form-group row">
                            <div class="col-sm-2">
                                <input class="form-control selectWrapper text-center text-success  .inputs p-0 " name="Input1" onkeypress="return isNumberKey(event)" id="Input1" required maxlength="1">
                            </div>
                            <div class="col-sm-2">
                                <input class="form-control selectWrapper text-center text-success .inputs p-0" name="Input2" onkeypress="return isNumberKey(event)" id="Input2" required maxlength="1">
                            </div>
                            <div class="col-sm-2">
                                <input class="form-control selectWrapper text-center text-success .inputs p-0" name="Input3" onkeypress="return isNumberKey(event)" id="Input3" required maxlength="1">
                            </div>
                            <div class="col-sm-2">
                                <input class="form-control selectWrapper text-center text-success .inputs p-0" name="Input4" onkeypress="return isNumberKey(event)" id="Input4" required maxlength="1">
                            </div>
                            <div class="col-sm-2">
                                <input class="form-control selectWrapper text-center text-success .inputs p-0" name="Input5" onkeypress="return isNumberKey(event)" id="Input5" required maxlength="1">
                            </div>
                            <div class="col-sm-2">
                                <input class="form-control selectWrapper text-center text-success .inputs p-0" name="Input6" onkeypress="return isNumberKey(event)" id="Input6" required maxlength="1">
                            </div>
                            <input type="hidden" id="OtpCode" />
                        </div>

                    </div>
                    <div class="form-group col-sm-1 center"></div>
                    <div class="form-group col-sm-4 center"></div>


                    <div class="form-group col-sm-4 float-right rounded-sm mt-5">

                        <button type="submit" id="btnSubmit" class="btn btn-outline btn-primary btn-block   font-14">Submit</button>


                    </div>
                    <div class="form-group col-sm-12 float-right rounded-sm mt-5 ">
                        <a asp-controller="Home" asp-action="Index" class="text-blue" style="color: #1f4a79">Go back to Website ?</a>
                    </div>
                </div>
            </div>
            <div class="col-1 d-lg-block d-none"></div>
        </div>
    }
</form>
</div>
</section>
@section Scripts{
    <script>
        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }
        $("#Input1").keyup(function () {


            if (this.value.length == this.maxLength) {

                $('#Input2').focus();
            }
        });
        $("#Input2").keyup(function () {


            if (this.value.length == this.maxLength) {

                $('#Input3').focus();
            }
        });
        $("#Input3").keyup(function () {


            if (this.value.length == this.maxLength) {

                $('#Input4').focus();
            }
        });
        $("#Input4").keyup(function () {


            if (this.value.length == this.maxLength) {

                $('#Input5').focus();
            }
        });
        $("#Input5").keyup(function () {


            if (this.value.length == this.maxLength) {

                $('#Input6').focus();
            }
        });


    </script>
}