    <div class="col-lg-12">
        <div class="alert alert-danger" id="addItemErrorMessage" hidden>

        </div>

    </div>

</div>


    <div class="card">
        <div class="card-header card-header-custom">
            <a id="AddNew" class="btn btn-outline-warning btn-custom btn-sm float-right" onclick="AddItem()" title="Add New"> <i class="fa fa-plus"></i> Add Item</a>
            Manage Item
        </div>
   <div class="card-body">
       <div class="row">
           <div class="col-sm-12">
                @await Html.PartialAsync("~/Views/Item/_ListItem.cshtml",new Item())
           </div>
       </div>
   </div>
    </div>




</div>