
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="body_holder" >
 <div class="row m-0 mb-3">
    <div class="col-lg-12">
        <div class="alert alert-success" id="addItemSuccessMessage" hidden>

        </div>

    </div>

</div>

