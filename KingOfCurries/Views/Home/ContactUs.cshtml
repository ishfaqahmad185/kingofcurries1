@model KingofCurries.Models.ContactUs
@{
    ViewData["Title"] = "Contact Us";
}

<style>
    .contact-form .form-control,.form-select {
        border-color: white !important;
        border: 1px solid;
      
    }

    .contact-form  .form-select {
        border-color: white !important;
        border: 1px solid;
    }
</style>
<div class="breadcumb-wrapper" data-bg-src="../../images/Banner/03.png">
    <div class="container z-index-common">
        <div class="breadcumb-content">
            <h1 class="breadcumb-title">Contact <span class="font-style text-theme2">Us</span></h1>
            <ul class="breadcumb-menu">
                <li><a href="/" style="color:#BB3430 !important;" >Home</a></li>
                <li>Contact Us</li>
            </ul>
        </div>
    </div>
</div>


<div class="" data-pos-for="#contactFormSec" data-sec-pos="bottom-half">
    <div class="container mt-5">
        <div class="row gy-4">
           
            <div class="col-lg-4">
                <div class="contact-info" data-bg-src="../../images/Banner/03P.png"/>
                    <div class="contact-info_icon"><i class="fal fa-envelope"></i></div>
                    <h4 class="contact-info_title box-title" style="color:#BB3430 !important;">Email</h4>
                    <span class="contact-info_text"><a style="color:black !important" href="mailto:info@kingofcurriesindianrestaurant.com">info@kingofcurriesindianrestaurant.com</a></span>
                </div>
            </div>
             <div class="col-lg-4">
                <div class="contact-info" data-bg-src="../../images/Banner/02.png"/>
                    <div class="contact-info_icon"><i class="fal fa-phone"></i></div>
                    <h4 class="contact-info_title box-title" style="color:#BB3430 !important;">Phone</h4>
                    <span class="contact-info_text"><a style="color:black !important" href="tel:+34 951 57 84 85">+34 951 57 84 85</a> </span>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-info" data-bg-src="../../images/Banner/03P.png"/>
                    <div class="contact-info_icon"><i class="fal fa-location-dot"></i></div>
                    <h4 class="contact-info_title box-title" style="color:#BB3430 !important;">Location</h4>
                    <span class="contact-info_text" style="color:black !important; font-size:small " >Avenida Federico García Lorca 3729631 Arroyo de la Miel</span>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="space-top Background_White" id="contactFormSec">
    <div class="container">
        <form asp-controller="Home" asp-action="ContactUs"  method="POST" class="contact-form " id="formContactUs" >
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            

                @if (ViewBag.errorMsg != null)
            {
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <div class="alert alert-danger alert-dismissible d-flex align-items-center" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                            <div>
                                <strong>Error! </strong> @ViewBag.errorMsg
                                <button type="button" class="btn-close text-danger" data-bs-dismiss="alert" aria-label="Close"><strong>x</strong></button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.successMsg))
            {
                <div class="row">
                    <div class="col-sm-12">
                        <div class="alert alert-success alert-dismissible d-flex align-items-center" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
                            <div>
                                <strong>Success: </strong> @ViewBag.successMsg
                                <button type="button" class="btn-close text-success" data-bs-dismiss="alert" aria-label="Close"><strong>x</strong></button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            <h3 class="form-title" style="color:#BB3430">Get In Touch</h3>
            <div class="row">
                <div class="form-group col-md-6">
                    <input type="text" asp-for="name"  class="form-control" required name="name" id="name" placeholder="Your Name"> <i class="fal fa-user"></i>
                <span asp-validation-for="name" class="text-danger"></span>    
                </div>
                <div class="form-group col-md-6"> 
                    <input type="email" asp-for="email"   class="form-control" required name="email" id="email" placeholder="Email Address"> <i class="fal fa-envelope"></i>
                   <span asp-validation-for="email" class="text-danger"></span>  
                </div>
                <div class="form-group col-md-6">
                    <input type="text" asp-for="number" required class="form-control" name="number" id="number" placeholder="Phone Number"> <i class="fal fa-phone"></i>
                            <span asp-validation-for="number" class="text-danger"></span>  
                </div>
                <div class="form-group col-md-6">
                    <select  name="subject" required asp-for="subject" id="subject" class="form-select">
                        <option value="" disabled="disabled" selected="selected" hidden>Select Service</option>
                        <option value="Reservation For Birthday">Reservation For Birthday</option>
                        <option value="Book A Table">Book A Table</option>
                        <option value="Food Pre-order">Food Pre-order</option>
                        <option value="Request a Quote">Request a Quote</option>
                        <option value="Report Issue">Report Issue</option>
                    </select>
                    <i class="fal fa-chevron-down"></i>
                       <span asp-validation-for="subject" class="text-danger"></span>  
                </div>
                <div class="form-group col-12">
                    <textarea name="message"  required asp-for="message" name="message" id="message" cols="30" rows="3" class="form-control" placeholder="Your Message"></textarea> <i class="fal fa-comment"></i>
                <span asp-validation-for="message" class="text-danger"></span>  
                </div>
                <div class="form-btn text-center col-12"><input type="submit"  asp-controller="Home" asp-action="ContactUs" class="as-btn w-25" value="Submit Message" /></div>
            </div>
           
        </form>
    </div>
</section>



    <<section class=" bg-title position-relative">
    <div class="container as-container">
    <div class="download-area Background_White " data-bg-src="../../WebsiteAssets/assets/img/bg/menu_bg_1.png">
            <div class="row justify-content-between align-items-center">
                <div class="col-12">
                    <div class="available-table">
                        <h3 class="available-table_title">Opening Time</h3>
