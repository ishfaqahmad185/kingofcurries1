@model IEnumerable<Customers>
@{
    ViewData["Title"] = "CustomerByOrderCounts";
    Layout = "~/Views/Shared/_LayoutClients.cshtml";
}

<div class="container-fluid">
    <div class="form-head d-flex mb-3 align-items-start">
        <div class="me-auto d-none d-lg-block">
            <h2 class="text-primary font-w600 mb-0">Customers</h2>
            <p class="mb-0">Welcome to Harry's Restro Admin!</p>
        </div>
    </div>



    <div class="row">
        <div class="col-12">
            <div class="card">
               
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th>S. #</th>
                                    <th>Name</th>

                                    <th>Contact Info</th>

                                    <th>Register Date</th>
                                    <th>Total Orders</th>
                                    
                                </tr>
                            </thead>
                            <tbody class="">
                                @{
                                   int count = 1;
                                    foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.CustomerName</td>
                                        <td>@item.CustomerPhone<br/>
                                        @item.CustomerEmailAddress</td>
                                        <td>@item.SysDate</td>
                                            <td class="text-center"><strong>@item.TotalOrderCount</strong></td>
                                    </tr>

                                    count ++;
                                }
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>
