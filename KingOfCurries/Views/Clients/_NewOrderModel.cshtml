<div class="modal fade" id="NewOrderModel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="staticBackdropLabel"><i class="fa fa-users"></i> New Order From<span id="spnUserName"></span></h5>

			</div>


			<div class="modal-body new-order-body">
				<form class="new-order-form">

					<input type="hidden" id="hdnNewOrderId" />
					<div class="form-group row">
						<div class="col-sm-6">
							<label>Invoice #</label>
							<input type="text" required readonly class="form-control" id="txtNewInvoice" />
						</div>
						<div class="col-sm-6">
							<label>Total Amount</label>
							<input type="text" required readonly class="form-control" id="txtTotalAmount" />
						</div>
						</div>
						<div class="form-group row">
						<div class="col-sm-6">
							<label>Delivery Type</label>
							<input type="text" required readonly class="form-control" id="txtDeliveryType" />
						</div>
						<div class="col-sm-6">
							<label>Payment Type</label>
							<input type="text" required readonly class="form-control" id="txtpaymentType" />
						</div>
						</div>
					<div class="form-group row">

						<div class="col-sm-6">
							<label>Order Date</label>
							<input type="text" readonly required class="form-control" id="txtNewOrderDate" />
						</div>
						<div class="col-sm-6">
							<label>Customer Notes</label>
							<textarea readonly class="form-control" id="txtNewOrderNotes"></textarea>
						</div>
					</div>
					
					<div class="form-group row">
						<div class="col-sm-12">
							<label id="lblDeliveryTime">Preparation Time</label>
							<div class="input-group mb-3">
								<button class="btn btn-danger" type="button" id="btnMinusTime"><i class="fa fa-minus"></i></button>
								<input type="text"  id="txtNewOrderDuration" readonly required class="form-control text-center" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
								<button class="btn btn-success" type="button" id="btnPlusTime"><i class="fa fa-plus"></i></button>
								
							</div>
						</div>
					</div>
					<div class="form-group row">
						<div class="col-sm-6">
							<a id="btnNewOrderAccept" class="btn btn-success   d-xl-block w-100" data-toggle="tooltip" data-placement="bottom" title="Add"><i class="mdi mdi-thumb-up text-white"></i> Accept this order</a>&nbsp;
						</div>
						<div class="col-sm-6">
							<a id="btnNewOrderReject" class="btn btn-danger   d-xl-block w-100" data-toggle="tooltip" data-placement="bottom" title="Add"><i class="mdi mdi-thumb-down text-white"></i> Reject this order</a>

						</div>
					</div>
				


				</form>
				
           </div>


                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
				



 
	


 