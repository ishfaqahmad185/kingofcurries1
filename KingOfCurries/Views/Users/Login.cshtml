@model KingofCurries.Models.ClientLogin
@{
    ViewData["Title"] = "Login";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en" class="h-100">


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="" />
    <meta name="author" content="" />
    <meta name="robots" content="" />
    <title>Login - Harry's Restro</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon.png">
    <link href="../../ClientAssets/css/style.css" rel="stylesheet">

    <style>
        .background-data{
            background-image:url("../../images/Mockup.png");
            background-repeat:no-repeat;
          
        }

        .div-content {
            position: relative;
        }

            .div-content span {
                position: absolute;
                bottom: 0;
                right: 0;
            }
    </style>

</head>

<body class="h-100 background-data" >
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-5">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                           
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <a href="#"><img src="/images/logo.png" class="w-50" alt=""></a>
                                    </div> 
                                    <h4 class="text-center mb-4">Sign in your account</h4>
                                    <form action="/users/login" method="post" >
                                        <div class="form-group">
                                            <label class="mb-1"><strong>Email</strong></label>
                                            <input type="text" asp-for="UserName" id="UserName" name="UserName" class="form-control" required>
                                        </div>
                                        <div class="form-group">
                                            <label class="mb-1"><strong>Password</strong></label>
                                            <input type="password" asp-for="Password" id="Password" name="Password" class="form-control" required>
                                        </div>
                                       
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block">Sign Me In</button>
                                        </div>
                                    </form>
                                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMsg))
                                    {
                                        <div class="alert alert-danger solid alert-dismissible fade show mt-3">
                                            <svg viewBox="0 0 24 24" width="24 " height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="me-2"><polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>
                                            <strong>Error!</strong> @ViewBag.ErrorMsg.
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close">
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                         
                        </div>
                    </div>
                </div>
                <div class="col-md-7 ">
                    <div class="div-content">
                        
                    </div>
                    </div>
               
            </div>
        </div>
    </div>


    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="../../ClientAssets/vendor/global/global.min.js"></script>
    <script src="../../ClientAssets/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="../../ClientAssets/js/custom.min.js"></script>
    <script src="../../ClientAssets/js/deznav-init.js"></script>

</body>


</html>
